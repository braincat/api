<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>com.structurizr.onpremisesapi.web.home.HomePageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ApiServlet</servlet-name>
        <servlet-class>com.structurizr.onpremisesapi.web.api.ApiServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ApiServlet</servlet-name>
        <url-pattern>/workspace/*</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>dataDirectory</param-name>
        <param-value>/usr/local/structurizr</param-value>
    </context-param>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/404.jsp</location>
    </error-page>
    
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>structurizrApi</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

</web-app>